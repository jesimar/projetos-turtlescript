kturtle-script-v1.0
@(reset)
@(canvassize) 650@(,) 550
@(go) 125@(,) 150
@(turnright) 90

@(learn) koch $length@(,) $depth {
  @(if) $depth > 0 {
    $depth = $depth-1
    $length = $length/3
    koch $length@(,) $depth
    @(turnleft) 60
    koch $length@(,) $depth
    @(turnright) 120
    koch $length@(,) $depth
    @(turnleft) 60
    koch $length@(,) $depth
  } @(else) {
  @(forward) 3*$length
  }
}

@(repeat)  3 {
  koch 150@(,) 5
  @(turnright) 120
}